#!/usr/bin/env node
/**
 * Wrapper that executes the downloaded binary.
 * This file is replaced by the actual binary during postinstall.
 */

const { spawn } = require('child_process');
const path = require('path');
const fs = require('fs');

const binPath = path.join(__dirname, process.platform === 'win32' ? 'textlands.exe' : 'textlands');

if (!fs.existsSync(binPath)) {
  console.error('TextLands binary not found. Try reinstalling: npm install -g textlands');
  process.exit(1);
}

const child = spawn(binPath, process.argv.slice(2), {
  stdio: 'inherit',
  shell: false,
});

child.on('close', (code) => {
  process.exit(code);
});
